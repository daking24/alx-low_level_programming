#include "holberton.h"

/**
 * print_last_digit - Prints the last digit of the inputed number.
 * @n: The number to be checked.
 *
 * Return: Value of the last digit.
 */
int print_last_digit(int n)
{
int last_digit = n % 10;

if (last_digit < 0)
{
last_digit *= -1;
}
_putchar(last_digit + '0');

return (last_digit);
}
